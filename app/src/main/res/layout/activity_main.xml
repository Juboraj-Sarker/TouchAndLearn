<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/for_all"
    android:orientation="vertical"
    tools:context="com.juborajsarker.touchandlearn.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_color"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:onClick="go_to_bengali_vowel_activity"
                    android:src="@drawable/main_page_bengali_vowel_alphabet" />


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:onClick="go_to_bengali_consonant_activity"
                    android:src="@drawable/main_page_bangeli_consonant_alphabet" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:onClick="go_to_english_alphabet_activity"
                    android:src="@drawable/main_page_english_alphabet" />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:onClick="go_to_english_number_activity"
                    android:src="@drawable/main_page_english_number" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:onClick="go_to_bengali_number_activity"
                    android:src="@drawable/main_page_bengali_number" />


                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:onClick="go_to_poems_activity"
                    android:src="@drawable/main_page_poems" />

            </LinearLayout>


            <com.google.android.gms.ads.AdView
                android:id="@+id/adView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/banner_home_footer_1"></com.google.android.gms.ads.AdView>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
