<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/for_all"
    android:orientation="vertical"
    tools:context="com.juborajsarker.touchandlearn.poems_activity.ActivityPoems">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/kathbirali"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:onClick="kathbirali"
            android:src="@drawable/poem_button_kathbirali" />

        <ImageView
            android:id="@+id/abc"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:onClick="abc"
            android:src="@drawable/poem_button_abc" />

        <ImageView
            android:id="@+id/twinckle"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:onClick="twinckle"
            android:src="@drawable/poem_button_twinkle" />


    </LinearLayout>


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_home_footer_1"></com.google.android.gms.ads.AdView>

</LinearLayout>
